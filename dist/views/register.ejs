<%- include ("./partials/header") %>

    <div class="login-register-container">
        <div class="centre">
            <img src="/img/su-logo.png" alt="SU Logo">
            <form action="/register" method="POST">
                <input type="text" name="username" id="username" placeholder="Username" required>
                <input type="password" name="password" id="password" placeholder="Password" required>
                <input type="submit" value="Register" class="btn-register">
            </form>
            <h4 style="color: aliceblue; font-size: 2rem;">Have an account? <a href="/login" style="color: rgb(92, 165, 224); text-decoration: none;">Login</a></h4>
        </div>
    </div>