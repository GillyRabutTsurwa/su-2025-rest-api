<%- include ("./partials/header") %>

<div class="login-register-container">
    <div class="centre">
        <img src="/img/su-logo.png" alt="SU Logo">
        <div class="input-container">
            <div class="text">
                <input type="text" name="name" id="name" placeholder="Name" required>
            </div>

            <h4>Is Network Active</h4>
            <div class="radio">
                <input type="radio" id="networkTrue" name="network" value="yes">
                <label for="networkTrue">SU Main</label>
                <input type="radio" id="networkFalse" name="network" value="no">
                <label for="networkFalse">SU Performs</label>
                <input type="radio" id="networkFalse" name="network" value="no">
                <label for="networkFalse">CoolSpring</label>
                <input type="radio" id="networkFalse" name="network" value="no">
                <label for="networkFalse">SU Green</label>
                <input type="radio" id="networkFalse" name="network" value="no">
                <label for="networkFalse">SU Magazine</label>
                <input type="radio" id="networkFalse" name="network" value="no">
                <label for="networkFalse">SU Bries</label>
                <input type="radio" id="networkFalse" name="network" value="no">
                <label for="networkFalse">SU GCP</label>
                <input type="radio" id="networkFalse" name="network" value="no">
                <label for="networkFalse">SU Swarm</label>
                <input type="radio" id="networkFalse" name="network" value="no">
                <label for="networkFalse">SU President</label>
                <input type="radio" id="networkFalse" name="network" value="no">
                <label for="networkFalse">Media Hub</label>
            </div>
            <button id="btnSubmit">Add Site</button>
        </div>
    </div>
</div>